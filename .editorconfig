# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Remote any whitespace characters preceding newline character
trim_trailing_whitespace = true

# Default indent style
indent_style = space
indent_size = 4

# Java default style
[*.java]
indent_style = space
indent_size = 4

# Go lang default style
[*.go]
indent_style = tab
indent_size = 8

# Rust default style
[*.rs]
indent_style = space
indent_size = 4

# Python default style
[*.py]
indent_style = space
indent_size = 4

# TypeScript default style
[*.ts]
indent_style = space
indent_size = 4

# JavaScript default style
[*.{js,json}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
